# Example environment variables for KoKoroMichi
# Copy to .env and fill values for local development

# Discord bot token
DISCORD_TOKEN=your_discord_token_here

# Core
BOT_TOKEN=replace-me
SINGLE_TENANT_MODE=false       # true = local JSON; false = SaaS (DB)
AUTO_FALLBACK=true             # auto-switch to local mode if provider fails

# Data provider: 'local' (default), 'mongo', 'postgres', 'firebase'
PROVIDER=local

# Local data directory override
DATA_DIR=data

# MongoDB (if using PROVIDER=mongo)
MONGO_URI=mongodb://user:pass@localhost:27017/kokoromichi

# Postgres database URL (if using PROVIDER=postgres)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Redis
REDIS_URL=redis://localhost:6379/0

# Object storage (for backups)
STORAGE_PROVIDER=s3
S3_BUCKET=my-bucket
S3_REGION=us-east-1
S3_ACCESS_KEY=...
S3_SECRET_KEY=...

# Observability
SENTRY_DSN=
PROMETHEUS_ENABLED=true
METRICS_HOST=0.0.0.0
METRICS_PORT=8000

# Security
SECRET_KEY=supersecret
TOKEN_ROTATION_DAYS=30

# Feature flags
SAAS_MODE=false
ENABLE_BILLING=false
ADMIN_USERS=1234567890,9876543210

# Logging
LOG_LEVEL=INFO

# CI/CD
DOCKER_REGISTRY=ghcr.io/your-org
